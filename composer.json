{
    "name": "yormy/tripwire-laravel",
    "description": "",
    "keywords": [
        "laravel",
        "tripwire",
        "firewall",
        "security",
        "waf",
        "blacklist",
        "xss",
        "sqli",
        "rfi",
        "lfi",
        "web application firewall"
    ],
    "homepage": "https://yormy.github.io/tripwire-laravel/",
    "license": "MIT",
    "authors": [
        {
            "name": "Yormy",
            "email": "dev@yormy.com",
            "homepage": "https://yormy.com",
            "role": "Developer"
        }
    ],
    "repositories_stub" : [
        {
            "type": "path",
            "url": "../<package_name>"
        }
    ],
    "require": {
        "php": "^8.2",
        "jenssegers/agent": "^2.6",
        "laravel/framework": "^9|^10",
        "laravel/slack-notification-channel": "^3.2",
        "spatie/laravel-data": "^4.4",
        "yormy/core-tools-laravel": "dev-master"
    },
    "require-dev": {
        "yormy/dev-tools-laravel": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "Yormy\\TripwireLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yormy\\TripwireLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "---------- STYLE ---------- ": "",
        "pint": "vendor/bin/pint",
        "---------- ANALYSIS ---------- ": "",
        "insights": "./vendor/bin/testbench insights",
        "insights:fix": "./vendor/bin/testbench insights --fix",
        "stan": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "stan:baseline": "./vendor/bin/phpstan analyse --memory-limit=2G --generate-baseline",
        "ide-helpers": "./vendor/bin/testbench clear-compiled && ./vendor/bin/testbench ide-helper:generate && ./vendor/bin/testbench ide-helper:models --write && ./vendor/bin/testbench ide-helper:meta",
        "coverage:check" : "composer coverage:clover && php coverage-checker.php clover.xml 50",
        "coverage:report" : "php -dpcov.enabled=1 -dpcov.directory=. -dpcov.exclude='~vendor~' ./vendor/bin/phpunit --coverage-html ./meta/coverage ",
        "coverage:text" : "php -dpcov.enabled=1 -dpcov.directory=. -dpcov.exclude='~vendor~' ./vendor/bin/phpunit --coverage-text ",
        "coverage:clover" : "php -dpcov.enabled=1 -dpcov.directory=. -dpcov.exclude='~vendor~' ./vendor/bin/phpunit --coverage-clover clover.xml",

        "---------- FIXES ---------- ": "",

        "cs-fixer" : "phpcbf",
        "md": "vendor/bin/phpmd . html cleancode --reportfile report.html",
        "phpcs": "phpcs --standard=PSR2 -s --exclude=Generic.Files.LineLength --standard=./phpcs.xml --report-file=phpcs-report.txt",
        "phpstan": "vendor/bin/phpstan analyze src --error-format=raw --level=8",
        "psalm": "vendor/bin/psalm --no-diff --no-cache --report-show-info=false --report=psalm-report.txt",
        "psalm-debug": "vendor/bin/psalm --no-cache --debug --debug-by-line",


        "---------- TESTS ---------- ": "",
        "test:all": "vendor/bin/phpunit",
        "t": "vendor/bin/phpunit --colors=always --testdox --group testnow",
        "t:all": "vendor/bin/phpunit",
        "t:x": "vendor/bin/phpunit --colors=always --testdox --group xxx",
        "t:unit": "vendor/bin/phpunit --colors=always --testdox --testsuite Unit",
        "t:wires": "vendor/bin/phpunit --colors=always --testdox --testsuite FeatureWires",

        "t:main": "vendor/bin/phpunit --colors=always --testdox --testsuite Main",

        "t:ext": "vendor/bin/phpunit --colors=always --testdox --testsuite Extensive",

        "test-browser": "vendor/bin/phpunit tests/Browser --colors=always --testdox",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "post-install-cmd": [
            "composer outdated"
        ],
        "post-update-cmd": [
            "composer outdated"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Yormy\\TripwireLaravel\\TripwireServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
